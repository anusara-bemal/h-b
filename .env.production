# Database connection string (SQLite)
DATABASE_URL=file:./prisma/db.sqlite

# NextAuth.js configuration
# Generate a secure random string using: `openssl rand -base64 32`
NEXTAUTH_SECRET=your_secure_auth_secret_replace_this_with_a_random_string
NEXTAUTH_URL=https://your-coolify-app-url.example.com

# API URLs for Coolify deployment
# This should be the same as your NEXTAUTH_URL value
NEXT_PUBLIC_API_URL=https://your-coolify-app-url.example.com/api

# Application settings
NODE_ENV=production 